<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.havefun.shortcode.widget.ColorTrackTextView
        android:id="@+id/colorTrackTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好世界"
        app:changeColor="@color/base_color_06c05f"
        app:originColor="@color/color_333333" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="功能列表"
        android:textColor="#222222"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLaunchShortCodePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/base_launch_page_bg_selector"
        android:gravity="center"
        android:padding="8dp"
        android:text="代码片段"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvLaunchThirdParty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/base_launch_page_bg_selector"
        android:gravity="center"
        android:padding="8dp"
        android:text="三方库"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvLaunchWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/base_launch_page_bg_selector"
        android:gravity="center"
        android:padding="8dp"
        android:text="自定义控件"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <EditText
        android:id="@+id/editText"
        tools:hint="这个候选人的"
        android:layout_margin="16dp"
        android:textSize="14sp"
        android:gravity="left|top"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        tools:ignore="Suspicious0dp" />


    <EditText
        android:layout_width="match_parent"
        android:textSelectHandle="@drawable/cursor"
        android:layout_height="50dp"/>



</LinearLayout>